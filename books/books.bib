@BOOK{Allen1987,
  title = {War Games: The Secret World of the Creators, Players, and Policy Makers Rehearsing World War III Today},
  publisher = {McGraw-Hill},
  year = {1987},
  author = {Thomas B. Allen},
  abstract = {I found this book in the bibliography of "Out of
	 Control". It is an in-depth history and insider's view of the large-scale
	 simulations which the U.S. military agencies run to decipher the
	 life-and-depth complexity of war. I have found the material to be a little
	 dated, and there are certain passages that are repetative and boring.
	 But every time I get ready to drop the book for good, Allen throws
	 down a interesting historical tidbit to keep me hooked. Like the
	 fact that the selective service registration comes directly from a
	 mobilization and readiness war game played in 1978, known as "Nifty Nugget".},
