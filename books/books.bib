@BOOK{Dennett1992,
  title = {Consciousness Explained},
  publisher = {Back Bay Books},
  year = {1992},
  author = {Daniel Dennett},
  abstract = {My buddy <a href="rejectedbanana-300.jpg">Nate</a> tells me I need to read this book. Here's what Publisher's
	 Weekly had to say: "Tufts University cognitive scientist Dennett
	 claims to have developed a major new theory of consciousness, yet
	 his view of the brain as a massive parallel processor is a familiar
	 one. What is different in his counter-intuitive theory is the claim
	 that human consciousness, rather than being "hard-wired" into the
	 brain's innate machinery, is more like software "running on the brain's
	 parallel hardware" and is largely a product of cultural evolution.
	 Author of Brainstorms , Dennett leads the adventurous gently through
	 thought experiments, metaphors and diagrams in a treatise keyed to
	 the serious, diligent reader. He presents a plausible evolutionary
	 scenario of how consciousness could have emerged from the hominid
	 brain. Dennett's audacious, tantalizing foray into the mind's inner
	 workings ties up loose ends at the interface of cognitive psychology,
	 artificial intelligence, neuroscience and biology." (from Amazon.com)},
  imageurl = {http://images.amazon.com/images/P/0316180661.01.MZZZZZZZ.jpg},
  owner = {mspiegel},
}

@BOOK{Gamma1995,
  title = {Design Patterns : Elements of Reusable Object-Oriented Software},
  publisher = {Addison-Wesley Professional},
  year = {1995},
  author = {Erich Gamma and Richard Helm and Ralph Johnson and John Vlissides},
  abstract = {It is time for me to geek out about how
	 this book is amazing. It is a true compendium of design patterns in
	 software engineering. Most computer scientists encounter the very
	 basics of pattern design in their studies. But if you really want
	 to find out what you are missing, pick up this book. If the words
	 Abstract Factory, Singleton, Flyweight, Memento, or Adapter make you
	 drool, you need to read this book. Very early in the book, the authors
	 pay homage to the work of Christopher Alexander and his "A Pattern
	 Language" series. Those books provide some neat insight into how
	 patterns are designed. The only drawback to the series is that I
	 repeatedly was asking the question, "this is interesting, but how does it
	 apply to my work." Which is why you need to read Design Patterns.},
  imageurl = {http://images.amazon.com/images/P/0201633612.01.MZZZZZZZ.jpg},
  owner = {ms6ep},
}

